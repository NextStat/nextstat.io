{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/plots/figure_v1.schema.json",
  "title": "NextStat Figure Artifact v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "title", "axes", "series"],
  "properties": {
    "schema_version": { "const": "nextstat.figure.v1" },
    "title": { "type": "string", "minLength": 1 },
    "subtitle": { "type": ["string", "null"] },
    "description": { "type": ["string", "null"] },
    "axes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y"],
      "properties": {
        "x": {
          "type": "object",
          "additionalProperties": false,
          "required": ["label"],
          "properties": {
            "label": { "type": "string" },
            "scale": { "type": "string", "enum": ["linear", "log10"] },
            "unit": { "type": ["string", "null"] }
          }
        },
        "y": {
          "type": "object",
          "additionalProperties": false,
          "required": ["label"],
          "properties": {
            "label": { "type": "string" },
            "scale": { "type": "string", "enum": ["linear", "log10"] },
            "unit": { "type": ["string", "null"] }
          }
        }
      }
    },
    "series": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/series" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "deterministic": { "type": "boolean" },
        "source": { "type": ["string", "null"] }
      }
    }
  },
  "$defs": {
    "style": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "color": { "type": ["string", "null"] },
        "line_style": { "type": "string", "enum": ["solid", "dash", "dot", "dashdot"] },
        "line_width": { "type": "number", "minimum": 0 },
        "marker": { "type": "string", "enum": ["none", "o", ".", "x", "+", "s", "d", "^", "v"] },
        "alpha": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "series": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name"],
      "properties": {
        "kind": { "type": "string", "enum": ["line", "band", "vline", "hline"] },
        "name": { "type": "string", "minLength": 1 },
        "x": { "type": "array", "items": { "type": "number" } },
        "y": { "type": "array", "items": { "type": "number" } },
        "y_lo": { "type": "array", "items": { "type": "number" } },
        "y_hi": { "type": "array", "items": { "type": "number" } },
        "x_at": { "type": "number" },
        "y_at": { "type": "number" },
        "style": { "$ref": "#/$defs/style" }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "line" } }, "required": ["kind"] },
          "then": { "required": ["x", "y"] }
        },
        {
          "if": { "properties": { "kind": { "const": "band" } }, "required": ["kind"] },
          "then": { "required": ["x", "y_lo", "y_hi"] }
        },
        {
          "if": { "properties": { "kind": { "const": "vline" } }, "required": ["kind"] },
          "then": { "required": ["x_at"] }
        },
        {
          "if": { "properties": { "kind": { "const": "hline" } }, "required": ["kind"] },
          "then": { "required": ["y_at"] }
        }
      ]
    }
  }
}


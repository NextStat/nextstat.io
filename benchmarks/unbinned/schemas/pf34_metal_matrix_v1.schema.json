{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/benchmarks/pf34_metal_matrix_v1.schema.json",
  "title": "PF3.4 Metal Matrix v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "title", "cases"],
  "properties": {
    "schema_version": { "const": "nextstat.pf34_metal_matrix.v1" },
    "title": { "type": "string", "minLength": 1 },
    "notes": { "type": "array", "items": { "type": "string" } },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "spec_rel", "toys"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "spec_rel": { "type": "string", "minLength": 1 },
          "toys": { "type": "string", "minLength": 1 },
          "modes": { "type": "string", "minLength": 1 },
          "mu": { "type": "number" },
          "seed": { "type": "integer", "minimum": 0 },
          "expected_set": { "type": "integer", "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}

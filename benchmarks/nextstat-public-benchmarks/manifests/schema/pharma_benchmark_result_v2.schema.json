{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/benchmarks/pharma_benchmark_result_v2.schema.json",
  "title": "NextStat Pharma Benchmark Result v2",
  "description": "Individual pharma benchmark case result. Covers PK individual fits, NLME fits, FOCE population estimation, and SAEM population estimation.",
  "type": "object",
  "required": ["schema_version", "suite", "case", "deterministic", "meta", "dataset", "model"],
  "additionalProperties": false,
  "properties": {
    "schema_version": { "const": "nextstat.pharma_benchmark_result.v2" },
    "suite": { "const": "pharma" },
    "case": { "type": "string", "minLength": 1 },
    "deterministic": { "type": "boolean" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["python", "platform", "nextstat_version"],
      "properties": {
        "python": { "type": "string" },
        "platform": { "type": "string" },
        "nextstat_version": { "type": "string" }
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cpu", "machine", "nextstat_version", "node", "platform", "python_full", "python_version", "system"],
      "properties": {
        "cpu": { "type": "string" },
        "machine": { "type": "string" },
        "nextstat_version": { "type": "string" },
        "node": { "type": "string" },
        "packages": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "platform": { "type": "string" },
        "python_full": { "type": "string" },
        "python_version": { "type": "string" },
        "rustc": { "type": "string" },
        "system": { "type": "string" }
      }
    },
    "dataset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "sha256"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "spec": {
          "type": "object",
          "properties": {
            "kind": { "type": "string" },
            "seed": { "type": "integer" },
            "dose": { "type": "number" },
            "sigma": { "type": "number" },
            "sigma_add": { "type": ["number", "null"] },
            "bioavailability": { "type": "number" },
            "error_model": { "type": "string" },
            "n_subjects": { "type": "integer", "minimum": 1 },
            "n_obs_per_subject": { "type": "integer", "minimum": 1 },
            "times": { "type": "array", "items": { "type": "number" } },
            "y": { "type": "array", "items": { "type": "number" } },
            "true_params": { "type": "array", "items": { "type": "number" } },
            "true_theta": { "type": "array", "items": { "type": "number" } },
            "true_omega": { "type": "array", "items": { "type": "number" } },
            "subject_idx": { "type": "array", "items": { "type": "integer", "minimum": 0 } }
          },
          "additionalProperties": false
        }
      }
    },
    "model": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "n_subjects", "n_obs", "n_params"],
      "properties": {
        "kind": { "type": "string", "minLength": 1 },
        "n_subjects": { "type": "integer", "minimum": 0 },
        "n_obs": { "type": "integer", "minimum": 0 },
        "n_params": { "type": "integer", "minimum": 0 }
      }
    },
    "timing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["nll_time_s_per_call"],
      "properties": {
        "nll_time_s_per_call": {
          "type": "object",
          "additionalProperties": false,
          "required": ["nextstat"],
          "properties": {
            "nextstat": { "type": "number", "minimum": 0 }
          }
        },
        "raw": {
          "type": "object",
          "additionalProperties": false,
          "required": ["number", "repeat", "target_s", "policy", "per_call_s"],
          "properties": {
            "number": { "type": "integer", "minimum": 1 },
            "repeat": { "type": "integer", "minimum": 1 },
            "target_s": { "type": "number", "minimum": 0 },
            "policy": { "type": "string", "enum": ["min", "median"] },
            "per_call_s": {
              "type": "object",
              "additionalProperties": false,
              "required": ["nextstat"],
              "properties": {
                "nextstat": { "type": "array", "items": { "type": "number", "minimum": 0 } }
              }
            }
          }
        }
      }
    },
    "fit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "skipped", "failed"] },
        "reason": { "type": "string" },
        "time_s": {
          "type": "object",
          "additionalProperties": false,
          "required": ["nextstat"],
          "properties": {
            "nextstat": { "type": "number", "minimum": 0 }
          }
        },
        "raw": {
          "type": "object",
          "additionalProperties": false,
          "required": ["repeat", "policy", "per_fit_s"],
          "properties": {
            "repeat": { "type": "integer", "minimum": 1 },
            "policy": { "type": "string", "enum": ["min", "median"] },
            "per_fit_s": {
              "type": "object",
              "additionalProperties": false,
              "required": ["nextstat"],
              "properties": {
                "nextstat": { "type": "array", "items": { "type": "number", "minimum": 0 } }
              }
            }
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "nextstat_nll": { "type": "number" },
            "nextstat_success": { "type": "boolean" },
            "nextstat_converged": { "type": "boolean" },
            "nextstat_n_iter": { "type": "integer", "minimum": 0 },
            "nextstat_n_evaluations": { "type": "integer", "minimum": 0 },
            "nextstat_termination_reason": { "type": "string" }
          }
        },
        "recovery": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["hat", "rel_err", "true"],
            "properties": {
              "hat": { "type": "number" },
              "rel_err": { "type": "number", "minimum": 0 },
              "true": { "type": "number" }
            }
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "status": { "const": "ok" } }, "required": ["status"] },
          "then": { "required": ["time_s", "raw"] }
        }
      ]
    },
    "foce": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "skipped", "failed"] },
        "reason": { "type": "string" },
        "time_s": {
          "type": "object",
          "additionalProperties": false,
          "required": ["nextstat"],
          "properties": {
            "nextstat": { "type": "number", "minimum": 0 }
          }
        },
        "raw": {
          "type": "object",
          "additionalProperties": false,
          "required": ["repeat", "policy", "per_fit_s"],
          "properties": {
            "repeat": { "type": "integer", "minimum": 1 },
            "policy": { "type": "string", "enum": ["min", "median"] },
            "per_fit_s": {
              "type": "object",
              "additionalProperties": false,
              "required": ["nextstat"],
              "properties": {
                "nextstat": { "type": "array", "items": { "type": "number", "minimum": 0 } }
              }
            }
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "converged": { "type": "boolean" },
            "error_model": { "type": "string" },
            "n_iter": { "type": "integer", "minimum": 0 },
            "ofv": { "type": "number" }
          }
        },
        "recovery": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["hat", "rel_err", "true"],
            "properties": {
              "hat": { "type": "number" },
              "rel_err": { "type": "number", "minimum": 0 },
              "true": { "type": "number" }
            }
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "status": { "const": "ok" } }, "required": ["status"] },
          "then": { "required": ["time_s", "raw"] }
        }
      ]
    },
    "saem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "skipped", "failed"] },
        "reason": { "type": "string" },
        "time_s": {
          "type": "object",
          "additionalProperties": false,
          "required": ["nextstat"],
          "properties": {
            "nextstat": { "type": "number", "minimum": 0 }
          }
        },
        "raw": {
          "type": "object",
          "additionalProperties": false,
          "required": ["repeat", "policy", "per_fit_s"],
          "properties": {
            "repeat": { "type": "integer", "minimum": 1 },
            "policy": { "type": "string", "enum": ["min", "median"] },
            "per_fit_s": {
              "type": "object",
              "additionalProperties": false,
              "required": ["nextstat"],
              "properties": {
                "nextstat": { "type": "array", "items": { "type": "number", "minimum": 0 } }
              }
            }
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "converged": { "type": "boolean" },
            "error_model": { "type": "string" },
            "n_iter": { "type": "integer", "minimum": 0 },
            "ofv": { "type": "number" }
          }
        },
        "recovery": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["hat", "rel_err", "true"],
            "properties": {
              "hat": { "type": "number" },
              "rel_err": { "type": "number", "minimum": 0 },
              "true": { "type": "number" }
            }
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "status": { "const": "ok" } }, "required": ["status"] },
          "then": { "required": ["time_s", "raw"] }
        }
      ]
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/benchmarks/montecarlo_safety_benchmark_suite_result_v1.schema.json",
  "title": "NextStat Monte Carlo Safety Benchmark Suite Result v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "suite", "deterministic", "device", "meta", "cases", "summary"],
  "properties": {
    "schema_version": { "const": "nextstat.montecarlo_safety_benchmark_suite_result.v1" },
    "suite": { "const": "montecarlo_safety" },
    "deterministic": { "type": "boolean" },
    "device": { "type": "string", "minLength": 1 },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "required": ["python", "platform", "nextstat_version"],
      "properties": {
        "python": { "type": "string" },
        "platform": { "type": "string" },
        "nextstat_version": { "type": "string" }
      }
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "case",
          "path",
          "sha256",
          "status",
          "workload",
          "n_components",
          "n_scenarios",
          "throughput_median"
        ],
        "properties": {
          "case": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "status": { "type": "string", "enum": ["ok", "warn", "failed"] },
          "workload": { "type": "string", "minLength": 1 },
          "n_components": { "type": "integer", "minimum": 1 },
          "n_scenarios": { "type": "integer", "minimum": 1 },
          "throughput_median": { "type": "number", "minimum": 0 }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["n_cases", "n_ok", "n_failed"],
      "properties": {
        "n_cases": { "type": "integer", "minimum": 0 },
        "n_ok": { "type": "integer", "minimum": 0 },
        "n_failed": { "type": "integer", "minimum": 0 }
      }
    }
  }
}


{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/benchmarks/ml_benchmark_suite_result_v1.schema.json",
  "title": "NextStat ML Benchmark Suite Result v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "suite", "deterministic", "meta", "cases", "summary"],
  "properties": {
    "schema_version": { "const": "nextstat.ml_benchmark_suite_result.v1" },
    "suite": { "const": "ml" },
    "deterministic": { "type": "boolean" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["python", "platform"],
      "properties": {
        "python": { "type": "string" },
        "platform": { "type": "string" }
      }
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "case",
          "path",
          "sha256",
          "status",
          "cold_ttfr_median_s",
          "warm_call_median_s"
        ],
        "properties": {
          "case": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "status": { "type": "string", "enum": ["ok", "warn", "failed"] },
          "cold_ttfr_median_s": { "type": "number", "minimum": 0 },
          "warm_call_median_s": { "type": "number", "minimum": 0 }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["n_cases", "n_ok", "n_warn", "n_failed", "worst_case"],
      "properties": {
        "n_cases": { "type": "integer", "minimum": 0 },
        "n_ok": { "type": "integer", "minimum": 0 },
        "n_warn": { "type": "integer", "minimum": 0 },
        "n_failed": { "type": "integer", "minimum": 0 },
        "worst_case": { "type": "string" }
      }
    }
  }
}


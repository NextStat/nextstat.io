{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/benchmarks/econometrics_benchmark_result_v1.schema.json",
  "title": "NextStat Econometrics Benchmark Result v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "suite",
    "case",
    "deterministic",
    "status",
    "reason",
    "environment",
    "meta",
    "dataset",
    "config",
    "parity",
    "timing",
    "results"
  ],
  "properties": {
    "schema_version": { "const": "nextstat.econometrics_benchmark_result.v1" },
    "suite": { "const": "econometrics" },
    "case": { "type": "string", "minLength": 1 },
    "deterministic": { "type": "boolean" },
    "status": { "type": "string", "enum": ["ok", "warn", "failed"] },
    "reason": { "type": ["string", "null"] },
    "environment": { "type": "object", "additionalProperties": true },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["python", "platform", "nextstat_version", "numpy_version"],
      "properties": {
        "python": { "type": "string" },
        "platform": { "type": "string" },
        "nextstat_version": { "type": "string" },
        "numpy_version": { "type": "string" },
        "statsmodels_version": { "type": ["string", "null"] },
        "linearmodels_version": { "type": ["string", "null"] },
        "pyfixest_version": { "type": ["string", "null"] },
        "wildboottest_version": { "type": ["string", "null"] }
      }
    },
    "dataset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "sha256", "spec"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "spec": { "type": "object" }
      }
    },
    "config": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "panel_fe",
            "did_twfe",
            "did_twfe_wild_bootstrap",
            "did_staggered",
            "event_study_twfe",
            "iv_2sls",
            "iv_2sls_hac",
            "aipw"
          ]
        },
        "cov": { "type": "string" },
        "cluster": { "type": ["string", "null"] },
        "n_obs": { "type": "integer", "minimum": 0 },
        "n_entities": { "type": "integer", "minimum": 0 },
        "n_times": { "type": "integer", "minimum": 0 },
        "n_regressors": { "type": "integer", "minimum": 0 },
        "n_boot": { "type": "integer", "minimum": 1 },
        "max_lag": { "type": "integer", "minimum": 0 },
        "control_group": { "type": ["string", "null"] },
        "weight_dist": { "type": ["string", "null"] },
        "window": {
          "type": ["array", "null"],
          "minItems": 2,
          "maxItems": 2,
          "items": { "type": "integer" }
        },
        "reference": { "type": ["integer", "null"] }
      }
    },
    "parity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "reference", "metrics"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "warn", "skipped"] },
        "reference": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "version"],
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "metrics": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "coef_max_abs_diff": { "type": ["number", "null"], "minimum": 0 },
            "coef_max_rel_diff": { "type": ["number", "null"], "minimum": 0 },
            "se_max_abs_diff": { "type": ["number", "null"], "minimum": 0 },
            "se_max_rel_diff": { "type": ["number", "null"], "minimum": 0 },
            "p_value_abs_diff": { "type": ["number", "null"], "minimum": 0 }
          }
        }
      }
    },
    "timing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["wall_time_s", "raw"],
      "properties": {
        "wall_time_s": { "$ref": "#/$defs/summary_s" },
        "raw": {
          "type": "object",
          "additionalProperties": false,
          "required": ["repeat", "policy", "runs_s"],
          "properties": {
            "repeat": { "type": "integer", "minimum": 1 },
            "policy": { "type": "string", "enum": ["min", "median"] },
            "runs_s": { "type": "array", "items": { "type": "number", "minimum": 0 } }
          }
        }
      }
    },
    "timing_baseline": { "type": "object", "additionalProperties": true },
    "results": {
      "type": "object",
      "additionalProperties": false,
      "required": ["nextstat"],
      "properties": {
        "nextstat": { "$ref": "#/$defs/backend_result" },
        "baseline": { "type": ["object", "null"] }
      }
    }
  },
  "$defs": {
    "summary_s": {
      "type": "object",
      "additionalProperties": false,
      "required": ["min", "median", "p95"],
      "properties": {
        "min": { "type": "number", "minimum": 0 },
        "median": { "type": "number", "minimum": 0 },
        "p95": { "type": "number", "minimum": 0 }
      }
    },
    "backend_result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["coef", "se"],
      "properties": {
        "coef": { "type": "array", "items": { "type": "number" } },
        "se": { "type": "array", "items": { "type": "number" } },
        "extra": { "type": "object" }
      }
    }
  }
}

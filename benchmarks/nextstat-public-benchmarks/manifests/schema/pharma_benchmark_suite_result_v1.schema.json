{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nextstat.io/schemas/benchmarks/pharma_benchmark_suite_result_v1.schema.json",
  "title": "NextStat Pharma Benchmark Suite Result v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "suite", "deterministic", "meta", "cases", "summary"],
  "properties": {
    "schema_version": { "const": "nextstat.pharma_benchmark_suite_result.v1" },
    "suite": { "const": "pharma" },
    "deterministic": { "type": "boolean" },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["python", "platform", "nextstat_version"],
      "properties": {
        "python": { "type": "string" },
        "platform": { "type": "string" },
        "nextstat_version": { "type": "string" }
      }
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["case", "path", "sha256", "n_subjects", "n_obs", "n_params", "nll_time_s_per_call_nextstat"],
        "properties": {
          "case": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "n_subjects": { "type": "integer", "minimum": 0 },
          "n_obs": { "type": "integer", "minimum": 0 },
          "n_params": { "type": "integer", "minimum": 0 },
          "nll_time_s_per_call_nextstat": { "type": "number", "minimum": 0 },
          "fit_status": { "type": "string" },
          "fit_time_s_nextstat": { "type": "number", "minimum": 0 }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["n_cases"],
      "properties": {
        "n_cases": { "type": "integer", "minimum": 0 }
      }
    }
  }
}

